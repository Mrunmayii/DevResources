<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.HomeFragment"
        android:background="@color/white">

        <!-- TODO: Update blank fragment layout -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name TextView"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:padding="5dp"
                app:layout_constraintLeft_toRightOf="@id/hi" />

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black"
                android:text="Logout"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/apiBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#CCBAF6"
                android:text="Public-Api"
                app:icon="@mipmap/assett_foreground"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/uiBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:backgroundTint="#ABEDC3"
                android:text="Ui-Design"
                app:icon="@mipmap/assett_foreground"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/assetsBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:backgroundTint="#95A0D8"
                android:text="Assets"
                app:icon="@mipmap/assett_foreground"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/utilitiesBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#3C3947"
                android:text="utilities"
                app:icon="@mipmap/assett_foreground"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/learnBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:backgroundTint="#353142"
                android:text="learn"
                app:icon="@mipmap/assett_foreground"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/jobBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#95D2D8"
                android:text="jobs"
                app:icon="@mipmap/assett_foreground"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:iconTint="@color/black" />
        </RelativeLayout>



    </FrameLayout>
</layout>